EXERCICIO 2

<?php 

	for($i=1; $i<=500; $i++){

		if($i % 3 == 0 and $i % 5 == 0)
			echo("FizzBuzz");
		else if($i % 3 == 0)
			echo("Fizz");
		else if($i % 5 == 0)
			echo("Buzz");

		else
			echo("$i");


		if ($i < 500)
			echo(",");
		else
			echo("");
}

EXERCICIO 3

<?php

	$i = 30;

	for ($i=2; $i<=100; $i++){
	$primo = true;
	for ($j=2; $j<$i; $j++){
		if($i % $j == 0){
			$primo = false;
			break;
		}
	}
	if ($primo == true)
		echo("$i ");
}

